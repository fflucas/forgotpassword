{
  "name": "resetpassword",
  "version": "1.0.0",
  "description": "How to securely reset a user account passsword",
  "main": "./src/index.ts",
  "scripts": {
    "compile": "tsc",
    "start": "set debug=* && tsnd --respawn --ignore-watch ./node_modules/ --transpile-only ./src/index.ts",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "migration:show": "ts-node ./node_modules/typeorm/cli.js migration:show"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fflucas/forgotpassword.git"
  },
  "keywords": [
    "password",
    "forgot",
    "password"
  ],
  "author": "Eze Sunday Eze, Fabio Lucas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fflucas/forgotpassword/issues"
  },
  "homepage": "https://github.com/fflucas/forgotpassword#readme",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.35",
    "@types/nodemailer": "^6.4.1",
    "aws-sdk": "^2.869.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.10.0",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.4.17",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.1.6",
    "tsyringe": "^4.4.0",
    "typeorm": "0.2.30",
    "typescript": "^4.2.3"
  }
}
